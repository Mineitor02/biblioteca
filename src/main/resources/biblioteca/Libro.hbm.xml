<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="biblioteca.Libro" table="libros">
        <id name="id" type="java.lang.Long" column="id">
            <generator class="identity"/>
        </id>
        <property name="titulo" column="titulo" type="string"/>
        <property name="autor" column="autor" type="string"/>
        <property name="anioPublicacion" column="anio_publicacion" type="integer"/>
        <property name="disponible" column="disponible" type="boolean"/>
    </class>
</hibernate-mapping>
